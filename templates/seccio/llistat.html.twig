{% extends 'base.html.twig' %}

{% block title %}Llistat de Seccions - Tenda Helena{% endblock %}

{% block contingut %}
  <h1 class="mb-4">Llistat de Seccions</h1>

  {# Taula responsive #}
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Codi</th>
          <th>Nom</th>
          <th>Descripci√≥</th>
          <th>Any</th>
          <th>Articles</th>
          <th>Accions</th>
        </tr>
      </thead>
      <tbody>
        {% for seccio in seccions %}
          <tr>
            <td>{{ seccio.id }}</td>
            <td><strong>{{ seccio.nom }}</strong></td>
            <td>{{ seccio.descripcio }}</td>
            <td>{{ seccio.any }}</td>
            <td>
              <span>{{ seccio.articles|length }}</span> {#Per mostrar la cantitat d'articles que te esta seccio#}
            </td>
            <td>
              <a href="{{ path('seccio_detall', {'codi': seccio.id}) }}" class="btn btn-sm btn-primary">
                Veure
              </a>
              

            </td>
          </tr>
        {% endfor %}
      </tbody>
      
      
    </table>
    
  </div>
  
{% endblock %}
