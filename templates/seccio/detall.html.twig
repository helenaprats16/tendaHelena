  {# Capçalera de la secció #}
  <div class="row mb-5">
    <div class="col-md-8">
      <h1 class="display-4">{{ seccio.nom }}</h1>
      <p class="lead text-muted">{{ seccio.descripcio }}</p>
      <ul class="list-unstyled">
        <li><strong>Articles disponibles:</strong> {{ seccio.articles|length }}</li>
      </ul>
    </div>
  </div>

  {# Grid de targetes d'articles #}
  <h2 class="mb-4">Articles de {{ seccio.nom }}</h2>
  <div class="row">
    {% for article in seccio.articles %}
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title">{{ article.nom }}</h5>
            <p><strong>Preu: </strong>{{ article.preu }}</p>
               <img src="{{ asset('imgs/' ~ article.imatge) }}"
                alt="{{ article.nom }}"
              class="img-fluid rounded my-3">

          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <a href="{{ path('seccio_llistat') }}" class="btn btn-secondary mt-3">
    ← Tornar a seccions
  </a>
  
  
